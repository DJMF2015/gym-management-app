<html>
<center><h1>Current Members</h1></center>

<body>
  <center><a href='/members/new'>Add Member</a>  </center>
  <hr>
  <center><table class="alt">
    <tr>
      <th>First Name:</th>
      <th>Last Name</th>
      <th>Membership:</th>
    </tr>

    <% @members.each do |member| %>
    <tr>
      <td><%= member.first_name %> </td>
      <td><%= member.last_name %></td>
      <td><%= member.membership %></td>

      <td><a href="/members/<%= member.id %>/edit">Update</a> </td>
      <!-- <br> -->
      <td><a href="/members/<%= member.id %>/show">Show</a></td>

      <td><form method="post" action="/members/<%= member.id %>/delete">
        <input type="submit" value="Delete"/>
      </form></td>
    </tr>
    <% end %>
  </table>
</center>
</body>
</html>
