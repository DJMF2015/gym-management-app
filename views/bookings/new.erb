<html>
<h1>Bookings</h1>
<hr>
<body>
  <center>  <form action="/bookings" method="post">

    <h3>
      <div>
        <label for="members_id" class = "form_fields">Select Member:</label>
        <center>     <select name="members_id" id="members_id">  </center>
          <% @members.each do |member| %>
          <option value=<%= member.id %></option>
          <%= member.first_name %> <%= member.last_name %>
          <% end %>
        </select>
      </h3>

      <div>
        <h3>
          <div>
            <label for="activities_id" class = "form_fields">Select Activity:</label>
            <center>  <select name="activities_id" id="activities_id"></center>
              <% @activities.each do |activity| %>

              <option value=<%= activity.id %></option>

              <%= activity.session %>
              <% end %>
            </select>
          </div>
        </h3>
      </div>


      <center>  <input type="submit" value="Submit Booking"></center>
    </form></center>
  </body>
  </html>
