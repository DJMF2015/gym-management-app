<html>
<h2>Update Activity Details</h2>
<hr>
<head>
  <!-- <link rel="stylesheet" type="text/css" href="/styles1.css"> -->
</head>
<br>
<body>
  <div>
    <form method="post" action="/activities/<%= @activity.id %>">

      <label for="session" class = "form_fields">Activity:</label>
      <input type="text" name="session" id="session"
      value="<%= @activity.session %>"/>

      <label for="spaces class = "form_fields"">Spaces:</label>
      <input
      type="number"
      name="spaces"
      id="spaces"  min="0"
      value="<%= @activity.spaces %>"
      />

      <label for="description" class = "form_fields">Description:</label>
      <input type="text" name="description" id="description"
      value="<%= @activity.description %>"/>

      <label for="instructor" class = "form_fields">Instructor:</label>
      <select id= "instructor" name="instructor">
        <% @instructor.each do |instruct| %>
        <%= @activity.instructor %>"
        <option value="<%= instruct %>" <%= 'selected' if @activity.instructor == instruct %>><%= instruct %></option>
        <% end %>
      </select>

      <label for="time_of_day" class = "form_fields">Time:</label>
      <input
      type="text"
      name="time_of_day"
      id="time_of_day"
      value="<%= @activity.time_of_day %>"
      />

      <label for="duration" class = "form_fields">Duration:</label>
      <input
      type="text"
      name="duration"
      id="duration"  min="0"
      value="<%= @activity.duration %>"
      />
      <input type='submit' value="Update " class = "form_fields"/>
    </form>
  </div>
</body>
</html>
